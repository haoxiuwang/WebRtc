<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="140dip"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Login"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="登录" />

            <TextView
                android:id="@+id/VcallState"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:textSize="20dp" />

            <Button
                android:id="@+id/SendVCall"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="Vcall" />

            <Button
                android:id="@+id/StartCamera"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="开启摄像头" />

            <Button
                android:id="@+id/StopCamera"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="关闭摄像头" />

            <Button
                android:id="@+id/Accept"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="接受Vcall" />

            <Button
                android:id="@+id/Reject"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="拒绝Vcall" />

            <Button
                android:id="@+id/Mute"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="音频静音" />

            <Button
                android:id="@+id/UnMute"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="音频解禁" />

            <Button
                android:id="@+id/VMute"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="视频静音" />

            <Button
                android:id="@+id/VUnMute"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="视频解禁" />

            <Button
                android:id="@+id/HangUp"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="结束" />

        </LinearLayout>
    </ScrollView>

    <!--SurfaceView-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llLocalView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/llRemoteView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

    </LinearLayout>

</LinearLayout>
